extends default

block header

block content
    div.profileWrapper.custom_bg(style=`background: url('https://image.tmdb.org/t/p/w300_and_h450_bestv2/${SingleMovie.backdrop_path}') center;
    background-size: cover; background-color: rgba(0, 0, 0, 0.9)`)
        div.profile(style=`background: url('https://image.tmdb.org/t/p/w300_and_h450_bestv2/${SingleMovie.backdrop_path}') center
        no-repeat; background-size: 400px 600px;`)
        div.profile-details
            h1.profile-name
                | #{SingleMovie.title}
            h2.profile-name
                | #{SingleMovie.original_title}
                p Релиз: #{SingleMovie.release_date}
            h2.profile-tagline
                div.ldBar.label-center(data-value=`${SingleMovie.vote_average*10}` data-preset="circle")
                div Рейтинг пользователей
            br
            h3
                | Обзор
            p.profile-bio
                | #{SingleMovie.overview}
            br
            a.button.button-twitter(href=`http://localhost:7070/`)
                | НАЗАД